---
import Icon from "../components/Icon.astro";
import type { SocialMediaItem as Props } from "../types";

const { text, href, icon } = Astro.props;
---

<a
  href={href}
  target="_blank"
  aria-label={`Follow on ${text}`}
  class="text-gray-500 dark:text-gray-400 hover:text-primary-700 dark:hover:text-primary-500"
>
  <Icon name={icon} size="xl" />
</a>
