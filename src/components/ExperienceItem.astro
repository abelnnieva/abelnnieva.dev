---
import Badge from "./Badge.astro";

const { date, title, description, employmentType, companyName, companyLogo } =
  Astro.props;
---

<article class="grid gap-4 md:grid-cols-5 md:gap-6 antialiased">
  <div class="md:col-span-1 md:place-self-start">
    <p class="sr-only">{companyName}</p>
    <img
      src={companyLogo}
      alt={`${companyName} logo`}
      class="h-5 md:h-6 max-w-none pt-[2px]"
    />
  </div>
  <div class="grid gap-4 md:col-span-3 md:place-self-start">
    <div class="flex items-center gap-4">
      <h3
        class="text-lg md:text-xl font-bold text-gray-900 dark:text-white tracking-tight"
      >
        {title}
      </h3>
      {employmentType && <Badge>{employmentType}</Badge>}
    </div>
    <p class="text-base text-gray-500 dark:text-gray-400">
      {description}
    </p>
  </div>
  <div
    class="row-start-2 md:row-start-auto md:col-span-1 md:place-self-start md:w-full md:text-right"
  >
    <p
      class="text-base leading-none md:leading-normal text-gray-500 dark:text-gray-400"
    >
      {date}
    </p>
  </div>
</article>
