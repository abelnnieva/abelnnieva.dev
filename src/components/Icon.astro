---
interface Props {
  name: string;
  class?: string;
}

import getIcon from "../lib/icons.ts";

const { name } = Astro.props;
const fallbackIcon = getIcon("link");
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  fill="none"
  viewBox="0 0 24 24"
  stroke-width="2"
  stroke="currentColor"
  width="24"
  height="24"
  class={Astro.props.class ? Astro.props.class : ""}
>
  <Fragment set:html={getIcon(name).path || fallbackIcon.path} />
</svg>
