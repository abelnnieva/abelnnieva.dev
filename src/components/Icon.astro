---
import { getIcon } from "../lib/icons.ts";

interface Props {
  name: string;
  size?: keyof typeof sizeClasses;
  class?: string;
  id?: string;
}

const { name, size = "base", class: className, id } = Astro.props;

const sizeClasses = {
  xs: "size-3",
  sm: "size-3.5",
  base: "size-4",
  lg: "size-5",
  xl: "size-6",
};

const classes = [sizeClasses[size as keyof typeof sizeClasses], className];

const icon = getIcon(name) || getIcon("arrow-right");
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width="24"
  height="24"
  viewBox={icon.viewBox}
  fill={icon.fill}
  stroke-linecap={icon.strokeLinecap}
  stroke-linejoin={icon.strokeLinejoin}
  stroke-width={icon.strokeWidth}
  stroke={icon.stroke}
  class:list={classes}
  id={id}
>
  <Fragment set:html={icon.graphic} />
</svg>
