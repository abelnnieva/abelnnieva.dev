---
import Logo from "./Logo.astro";
import type { Image } from "../types";

interface Props {
  name: string;
  image: Image;
  size?: keyof typeof sizeClasses;
  class?: string;
}

const { name, image, size = "base", class: className } = Astro.props;

const sizeClasses = {
  sm: "size-10",
  base: "size-16",
};

const classes = [sizeClasses[size as keyof typeof sizeClasses], className];
---

<div
  class:list={[
    "bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-600 flex items-center justify-center rounded-lg",
    classes,
  ]}
>
  <Logo name={name} image={image} size={size} />
</div>
