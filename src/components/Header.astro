---
import Icon from "./Icon.astro";

const { pathname } = Astro.url;
const navItems = [
  {
    text: "About",
    label: "about",
    href: "/about",
  },
  {
    text: "Experience",
    label: "experience",
    href: "/experience",
  },
  {
    text: "Projects",
    label: "projects",
    href: "/projects",
  },
  {
    text: "Contact",
    label: "contact",
    href: "/contact",
  },
];
---

<header class="antialiased">
  <nav class="bg-white border-gray-200 dark:bg-gray-900">
    <div
      class="max-w-4xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
      <a
        href="/"
        class="self-center text-lg md:text-xl lg:text-2xl font-bold whitespace-nowrap dark:text-white"
      >
        Abel N. Nieva
      </a>
      <button
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <Icon name="menu" />
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
        >
          {
            navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class={`block py-2 px-3 rounded md:p-0 dark:text-white ${pathname === item.href ? "text-white bg-primary-700 md:bg-transparent md:text-primary-700 md:dark:text-primary-500" : "text-gray-900  hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-primary-700   md:dark:hover:text-primary-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"}`}
                  aria-label={item.label}
                  aria-current={pathname === item.href ? "page" : undefined}
                >
                  {item.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>
