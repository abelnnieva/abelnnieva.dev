---
import Container from "./Container.astro";
import Icon from "./Icon.astro";
import type { NavigationItem } from "../types/index";

interface Props {
  brand: string;
  navigation: NavigationItem[];
}

const { pathname } = Astro.url;
const { brand, navigation } = Astro.props;
---

<header>
  <Container>
    <nav class="flex flex-wrap items-center justify-between py-6">
      <a
        href="/"
        class="self-center text-xl/none md:text-2xl/none font-bold whitespace-nowrap text-gray-900 dark:text-white"
      >
        {brand}
      </a>
      <button
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <Icon name="menu" />
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-6 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
        >
          {
            navigation.map((navigationItem) => (
              <li>
                <a
                  href={navigationItem.href}
                  class={`block py-2 px-3 rounded md:p-0 dark:text-white text-sm ${pathname === navigationItem.href ? "text-white bg-primary-700 md:bg-transparent md:text-primary-700 md:dark:text-primary-500" : "text-gray-900  hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-primary-700   md:dark:hover:text-primary-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"}`}
                  aria-label={navigationItem.label}
                  aria-current={
                    pathname === navigationItem.href ? "page" : undefined
                  }
                >
                  {navigationItem.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </nav>
  </Container>
</header>
