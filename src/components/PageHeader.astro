---
import Container from "./Container.astro";

interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<div class="pb-6 md:pb-10 pt-28 md:pt-32">
  <Container>
    <div class="w-2/3">
      <h1
        class="mb-4 text-4xl/none md:text-5xl/none text-balance font-bold text-slate-900 dark:text-white"
      >
        {title}
      </h1>
      <p
        class="text-base md:text-lg text-balance text-slate-500 dark:text-slate-400"
      >
        {text}
      </p>
    </div>
  </Container>
</div>
