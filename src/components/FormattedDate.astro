---
interface Props {
  date: Date;
  itemprop?: string | null | undefined;
  class?: string;
}

const { date, itemprop, class: className } = Astro.props;
---

<time
  class:list={["text-gray-400 dark:text-gray-500", className]}
  datetime={date.toISOString()}
  itemprop={itemprop}
>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
