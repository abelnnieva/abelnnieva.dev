---
import Heading from "@/components/Heading.astro";
import Layout from "@/layouts/Layout.astro";
import Text from "@/components/Text.astro";
---

<Layout
  title="Abel N. Nieva - Page Not Found"
  description="The page you are looking for does not exist. Visit Abel N. Nieva's personal website to explore his projects, experience, and notes on web development."
>
  <main class="pt-16 pb-16">
    <div
      class="mx-auto flex w-full max-w-7xl flex-grow flex-col justify-center px-4 sm:px-6 lg:px-8"
    >
      <div class="py-16">
        <div class="text-center">
          <p class="text-base font-semibold text-primary-700 mb-2">404</p>
          <Heading as="h2" size="2xl" class="tracking-tight text-balance mb-4">
            Page not found.
          </Heading>
          <Text as="p" size="lg" color="gray.500">
            Sorry, we couldn't find the page you're looking for.
          </Text>
          <div class="mt-6">
            <a class="text-base font-medium hover:text-primary-700" href="/">
              Go back home
              <span aria-hidden="true"> â†’</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: calc(100vh - 212px);
  }
</style>
